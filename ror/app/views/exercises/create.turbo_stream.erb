<% if @exercise.errors.any? %>
  <%= turbo_stream.replace "new_exercise_frame" do %>
    <% render "new", exercise: @exercise, lesson_id: @exercise.lesson_id %>
  <% end %>
<% else %>
  <%= turbo_stream.append "exercises_list_frame" do %>
    <%= render Exercises::ExerciseDetails.new(exercise: @exercise) %>
  <% end %>
  <%= turbo_stream.replace "new_exercise_frame" do %>
    <%= render Lessons::AddExerciseButtons.new(lesson: @exercise.lesson) %>
  <% end %>
<% end %>
