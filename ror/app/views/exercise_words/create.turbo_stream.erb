<% if @exercise_word.errors.any? %>
  <%= turbo_stream.replace "#{dom_id(@exercise_word.exercise)}_new_exercise_word_frame" do %>
    <% render "new", exercise_word: @exercise_word %>
  <% end %>
<% else %>
  <%= turbo_stream.append "#{dom_id(@exercise_word.exercise)}_list_frame" do %>
    <%= render Words::WordListing.new(exercise_word: @exercise_word) %>
  <% end %>
  <%= turbo_stream.replace "#{dom_id(@exercise_word.exercise)}_new_exercise_word_frame" do %>
    <%= render Exercises::Wordlists::AddWordButtons.new(wordlist_exercise: @exercise_word.exercise) %>
  <% end %>
<% end %>
