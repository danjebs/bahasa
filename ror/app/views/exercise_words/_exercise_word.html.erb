<%= turbo_frame_tag(
  "#{dom_id(exercise_word)}",
  data: { id: exercise_word.id, controller: "exercise_word" }
) do %>
  <div id="<%= dom_id(exercise_word) %>" class="flex justify-between items-center border-b border-solid border-gray-200">
    <div class="flex gap-2">
      <div class="w-36 py-2 px-3"><%= exercise_word.translation %></div>
      <div class="w-36 py-2 px-3"><%= exercise_word.word %></div>
    </div>
    <div class="flex justify-center items-center">
      <%= render LinkButton.new(
        href: exercise_word,
        icon: :trash,
        color: :white,
        size: :sm,
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?",
          turbo_frame: "#{dom_id(exercise_word)}"
        }
      ) %>
      <button class="reorder-handle cursor-grab">
        <%= render partial: "shared/icon", locals: { name: 'chevron-up-down' } %>
      </button>
      <%= render LinkButton.new(
        href: edit_exercise_word_path(exercise_word),
        icon: :edit,
        color: :white,
        size: :sm,
        data: { turbo_frame: "#{dom_id(exercise_word)}" }
      ) %>
    </div>
  </div>
<% end %>
