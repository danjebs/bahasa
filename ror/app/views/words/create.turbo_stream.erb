<% if @word.errors.any? %>
  <%= turbo_stream.replace "#{dom_id(@word.exercise)}_new_word_frame" do %>
    <% render "new", word: @word %>
  <% end %>
<% else %>
  <%= turbo_stream.append "#{dom_id(@word.exercise)}_list_frame" do %>
    <%= render Words::WordListing.new(word: @word) %>
  <% end %>
  <%= turbo_stream.replace "#{dom_id(@word.exercise)}_new_word_frame" do %>
    <%= render Words::WordNew.new(word: Word.new(exercise_id: @word.exercise_id)) %>
  <% end %>
<% end %>
