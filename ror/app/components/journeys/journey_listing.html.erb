<h1>
  Hallo
</h1>
<section>
  <h2>
    Continue Your Journey
  </h2>
  <% @journeys.each do |journey| %>
    <%= render LinkButton.new(
      href: "/#{journey.language.code}",
      label: journey.language.name,
      size: :lg,
      color: :red
    ) %>
  <% end %>
</div>
<section>
  <h2>
    Start a New Journey
  </h2>
  <% @languages_to_learn.each do |language| %>
    <%= render LinkButton.new(
      href: "/#{language.code}",
      label: "Learn #{language.name}",
      size: :lg,
      color: :red
    ) %>
  <% end %>
</div>