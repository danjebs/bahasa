<div data-controller="tab-bar">
  <div class="sticky top-0 pt-4 bg-white border-b border-gray-200 dark:border-gray-500">
    <nav class="-mb-px flex" aria-label="Tabs">
      <% @tabs.each_with_index do |tab, i| %>
        <button
          data-tab-bar-target="tabs"
          data-action="tab-bar#onClickTab"
          data-tab-id="<%= tab %>"
          class="shrink-0 capitalize px-8 py-4 font-medium text-gray-500 <%= i == 0 ? 'bg-red-100' : '' %>  rounded-t-lg border border-solid border-gray-100"
        >
          <%= tab %>
        </button>
      <% end %>
    </nav>
  </div>
  <% sections.each_with_index do |section, i| %>
    <div
      class="<%= i == 0 ? '' : 'hidden' %> py-6"
      id="<%= @tabs[i] %>"
      data-tab-bar-target="sections"
      data-section-id="<%= @tabs[i] %>"
    >
      <%= section %>
    </div>
  <% end %>
</div>