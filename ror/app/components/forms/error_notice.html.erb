<% if @model.errors.any? %>
  <div id="error_explanation" class="bg-primary-50 text-primary-500 px-3 py-2 font-medium rounded-lg mt-3">
    <div>
      <%= pluralize(@model.errors.count, "error") %> prohibited this <%= @model.class.name.downcase %> from being saved:
    </div>
    <ul>
      <% @model.errors.each do |error| %>
        <li>
          <%= error.full_message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
