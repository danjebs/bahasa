<turbo-frame id="<%= dom_id(@phrase.exercise) %>_new_phrase_frame">
  <%= render Forms::InlineForm.new(
    model: @phrase,
    cancel_href: @phrase.exercise.lesson,
    direction: :col,
    fields: [
      { name: :phrase, type: :text },
      { name: :translation, type: :text },
      { name: :exercise_id, type: :hidden, value: @phrase.exercise_id },
    ]
  ) %>
</turbo-frame>
