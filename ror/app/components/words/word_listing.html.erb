<turbo-frame
  id="<%= dom_id(@word) %>"
  data-model="word"
  data-id="<%= @word.id %>"
  class="flex justify-between items-center border-b last-of-type:border-none border-solid border-gray-100 dark:border-gray-600"
>
  <div class="reorder-handle flex w-full justify-between items-center cursor-grab px-3">
    <div class="flex gap-2">
      <div class="w-36 py-2">
        <%= @word.word %>
      </div>
      <div class="w-36 py-2">
        <%= @word.translation %>
      </div>
    </div>
    <div class="flex justify-center items-center">
      <%= render LinkButton.new(
        href: edit_word_path(@word),
        icon: :edit,
        color: :white,
        size: :sm,
        data: { turbo_frame: "#{dom_id(@word)}" }
      ) %>
    </div>
  </div>
</turbo-frame>
