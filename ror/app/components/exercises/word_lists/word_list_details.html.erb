<div class="border border-solid border-gray-100 dark:border-gray-700 rounded-lg">
  <% if @word_list.words.length > 0 %>
    <div class="flex w-full font-semibold bg-gray-50 dark:bg-gray-700">
      <div class="w-36 py-2 px-3">
        English
      </div>
      <div class="w-36 py-2 px-3">
        Indonesian
      </div>
      <div class="">
      </div>
    </div>
  <% end %>

  <turbo-frame
    id="<%= dom_id(@word_list) %>_list_frame"
    data-controller="reorderable"
    data-reorderable-url="<%= word_path(':id') %>"
  >
    <%= render(Words::WordListing.with_collection(@word_list.words.ordered)) %>
  </turbo-frame>
</div>

<%= render Exercises::WordLists::AddWordButtons.new(word_list: @word_list) %>
