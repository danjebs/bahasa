<turbo-frame id="remote_modal">
  <%= render UI::Layout::Modal.new(id: dom_id(@word_list)) do |component| %>
    <% component.with_heading do %>
      Edit Word List
    <% end %>
    <%= render Forms::Form.new(
      model: @word_list,
      fields: [{ type: :text, name: :title }],
      cancel_href: @word_list.lesson,
      delete_href: @word_list.becomes(Exercise)
    ) %>
  <% end %>
</turbo-frame>
