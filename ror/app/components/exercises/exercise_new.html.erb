<turbo-frame id="remote_modal">
  <%= render UI::Layout::Modal.new(id: dom_id(@exercise)) do |component| %>
    <% component.with_heading do %>
      Add New Exercise
    <% end %>
    <%= render Forms::Form.new(
      model: @exercise.becomes(Exercise),
      fields: [
        { name: :title, type: :text },
        @exercise.type.present? ? { name: :type, type: :hidden, value: @exercise.type } : { name: :type, type: :select, options: [["Blurb", "Blurb"], ["Word List", "WordList"], ["Phrase List", "PhraseList"]] },
        { name: :lesson_id, type: :hidden, value: @exercise.lesson_id }
      ],
      cancel_href: @exercise.lesson
    ) %>
  <% end %>
</turbo-frame>
