<%= form_with(model: @translation_card, class: "contents") do |form| %>
  <%= render Forms::ErrorNotice.new(model: @translation_card) %>

  <div class="flex justify-between items-center border-b border-solid last-of-type:border-none border-gray-200">
    <%= form.hidden_field :lesson_id, value: @translation_card&.lesson_id || params[:lesson_id] %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
      <div class="w-36 py-1">
        <%= form.text_field :front, autofocus: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-1 w-full" %>
      </div>

      <div class="w-36 py-1">
        <%= form.text_field :back, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-1 w-full" %>
      </div>
    </div>

    <div class="flex-grow-0">
      <%= form.submit "Save", class: "" %>
      <%= render LinkButton.new(href: :back, label: "Cancel", size: :sm, color: :white) %>
    </div>
  </div>
<% end %>