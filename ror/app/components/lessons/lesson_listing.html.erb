<div
  id="<%= dom_id(@lesson) %>"
  class="flex justify-between items-center p-4 last:border-none border-b border-solid border-gray-200 dark:border-gray-600"
  data-model="lesson"
  data-id="<%= @lesson.id %>"
>
  <%= link_to @lesson, class: "flex-grow", data: { turbo_visit_control: "reload" } do %>
    <div class="text-base text-gray-500 dark:text-gray-400">
      <%= "Lesson #{@lesson.position}" %>
    </div>
    <div class="text-xl font-semibold">
      <%= @lesson.title %>
    </div>
  <% end %>
  <div class="flex-grow-0 flex items-center">
    <%= render UI::Atoms::ReorderHandle.new %>
  </div>
  <%= helpers.turbo_stream_from @lesson %>
</div>